<div id="moderator_header"> 
  <form id="notice_input_form">
      <input id="notice_name" type="text" size="30" maxlength="30" autocomplete="off" value="Moderator"/>:&nbsp;
      <input id="notice_content" type="text" size="100" maxlength="100" autocomplete="off"/>
      <input id="notice_submit" type="submit" value="Anzeigen"/>
  </form>
  <iframe scrolling="no" height="30" width="800" src="<%= request.protocol + request.host + ":" + request.port.to_s %>/notice"></iframe>
</div>

<div id="moderator_play_area" class="gold">

